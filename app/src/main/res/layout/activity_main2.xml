<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="#FF9800"
        android:text="View4"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_view_view4"
        android:layout_toStartOf="@id/text_view_view4"
        android:background="#CDDC39"
        android:text="View3"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_view2"
        android:layout_toStartOf="@id/text_view_view3"
        android:layout_above="@id/text_view_view3"
        android:textSize="30sp"
        android:background="#E91E63"
        android:text="View2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentStart=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_view_view2"
        android:layout_toStartOf="@id/text_view_view2"
        android:background="#55534F"
        android:text="View1"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_view4"
        android:layout_toStartOf="@id/text_view_view4"
        android:background="#673AB7"
        android:text="View5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_view5"
        android:layout_toStartOf="@id/text_view_view5"
        android:background="#009688"
        android:text="View6"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_view6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_view5"
        android:layout_toStartOf="@id/text_view_view5"
        android:background="#9C27B0"
        android:text="View6"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_view7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_view6"
        android:layout_toStartOf="@id/text_view_view6"
        android:background="#2196F3"
        android:text="View7"
        android:textSize="30sp" />
</RelativeLayout>